@using MudBlazor

<style>
    /* 1. Estado ACTIVO (Cuando estás en esa página) */
    .mud-nav-link.active {
        background-color: rgba(255, 255, 255, 0.15) !important; /* Fondo semitransparente claro */
        color: #ffffff !important; /* Texto blanco brillante */
        font-weight: 500; /* Letra un poco más gruesa */
        border-radius: 4px; /* Bordes suavizados */
    }

        /* Asegurar que el ICONO también se ponga blanco brillante */
        .mud-nav-link.active .mud-icon-root {
            color: rgba(123, 211, 321, 0.7) !important;
        }

    /* 2. Estado HOVER (Cuando pasas el mouse por encima pero no haces clic) */
    .mud-nav-link:hover:not(.active) {
        color: rgba(123, 211, 321, 0.7) !important; 
    }
    /* 3. Estado Icono (Cuando pasas el mouse por encima pero no haces clic) */
    .mud-nav-link:hover:not(.active) .mud-icon-root {
        color: rgba(123, 211, 321, 0.7) !important; 
    }

    /* 4. Estado NORMAL (Texto grisáceo para no cansar la vista) */
    .mud-nav-link {
        color: #ffffff !important;
    }

        .mud-nav-link .mud-icon-root {
            color: #ffffff !important;
        }
</style>

