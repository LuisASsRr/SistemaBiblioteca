@using MudBlazor

<style>
    .nav-wrapper {
        padding: 16px 8px;
        width: 100%;
    }

    /* Estado ACTIVO */
    .mud-nav-link.active {
        background-color: rgba(255, 255, 255, 0.15) !important;
        color: #ffffff !important;
        font-weight: 500;
        border-radius: 4px;
    }

    .mud-nav-link.active .mud-icon-root {
        color: rgba(123, 211, 255, 0.9) !important;
    }

    /* Estado HOVER */
    .mud-nav-link:hover:not(.active) {
        color: rgba(123, 211, 255, 0.7) !important;
        background-color: rgba(255, 255, 255, 0.05) !important;
        border-radius: 4px;
    }

    .mud-nav-link:hover:not(.active) .mud-icon-root {
        color: rgba(123, 211, 255, 0.7) !important;
    }

    /* Estado NORMAL */
    .mud-nav-link {
        color: #ffffff !important;
        margin: 4px 0;
    }

    .mud-nav-link .mud-icon-root {
        color: #ffffff !important;
    }

    .mud-nav-group {
        color: #ffffff !important;
    }

    .mud-nav-group .mud-icon-root {
        color: #ffffff !important;
    }
</style>

<div class="nav-wrapper">
    <MudNavMenu>
        <MudDivider Class="my-2" />
        
        <MudNavLink Href="/dashboard" 
                    Icon="@Icons.Material.Filled.Dashboard" 
                    Match="NavLinkMatch.All">
            Dashboard
        </MudNavLink>

        <MudNavGroup Title="Lectores" 
                     Icon="@Icons.Material.Filled.Person" 
                     Expanded="false">
            <MudNavLink Href="/lectores/directorio" 
                        Icon="@Icons.Material.Filled.ImportContacts">
                Directorio
            </MudNavLink>
            <MudNavLink Href="/lectores/sanciones" 
                        Icon="@Icons.Material.Filled.Block">
                Sanciones
            </MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Libros"
                     Icon="@Icons.Material.Filled.MenuBook"
                     Expanded="false">

            @* 1. PARA EL ALUMNO (Visual, bonito) *@
            <MudNavLink Href="/libros/catalogo"
                        Icon="@Icons.Material.Filled.Storefront">
                Catálogo
            </MudNavLink>

            @* 2. PARA EL ADMIN (Aquí es donde REGISTRAS libros) *@
            @* Esta es la opción que te faltaba *@
            <MudNavLink Href="/libros/gestion"
                        Icon="@Icons.Material.Filled.PostAdd">
                Gestión de Libros
            </MudNavLink>

            @* 3. MANTENIMIENTO (Tablas secundarias) *@
            <MudNavLink Href="/libros/autores"
                        Icon="@Icons.Material.Filled.RecordVoiceOver">
                Autores
            </MudNavLink>

            <MudNavLink Href="/libros/categorias"
                        Icon="@Icons.Material.Filled.Category">
                Categorías
            </MudNavLink>

        </MudNavGroup>

        <MudNavGroup Title="Préstamos" 
                     Icon="@Icons.Material.Filled.SwapHoriz" 
                     Expanded="false">
            <MudNavLink Href="/prestamos/nuevo" 
                        Icon="@Icons.Material.Filled.LibraryAdd">
                Realizar Préstamo
            </MudNavLink>
            <MudNavLink Href="/prestamos/devolucion" 
                        Icon="@Icons.Material.Filled.AssignmentReturn">
                Devoluciones
            </MudNavLink>
            <MudNavLink Href="/prestamos/activos" 
                        Icon="@Icons.Material.Filled.PendingActions">
                Préstamos Activos
            </MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Hemeroteca" 
                     Icon="@Icons.Material.Filled.Newspaper" 
                     Expanded="false">
            <MudNavLink Href="/hemeroteca/catalogo" 
                        Icon="@Icons.Material.Filled.Inventory">
                Catálogo General
            </MudNavLink>
            <MudNavLink Href="/hemeroteca/ingreso" 
                        Icon="@Icons.Material.Filled.PostAdd">
                Ingresar Documento
            </MudNavLink>
        </MudNavGroup>

        <MudNavLink Href="/reportes" 
                    Icon="@Icons.Material.Filled.BarChart">
            Reportes
        </MudNavLink>
        
        <MudNavLink Href="/administracion" 
                    Icon="@Icons.Material.Filled.AdminPanelSettings">
            Administración
        </MudNavLink>
    </MudNavMenu>
</div>